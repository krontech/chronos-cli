<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE node PUBLIC
    "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
    "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd" >
<node>
  <interface name="com.krontech.chronos.video">
    <method name="record_file">
      <arg name="filename" direction="in" type="s"/>
      <arg name="settings" direction="in" type="a{sv}"/>
    </method>
    <method name="livestream">
      <arg name="settings" direction="in" type="a{sv}"/>
    </method>
    <method name="addregion">
      <arg name="args" direction="in" type="a{sv}"/>
      <arg name="data" direction="out" type="a{sv}"/>
    </method>
    <method name="playback">
      <arg name="args" direction="in" type="a{sv}"/>
      <arg name="data" direction="out" type="a{sv}"/>
    </method>
    <method name="status">
      <arg name="data" direction="out" type="a{sv}"/>
    </method>
  </interface>
</node>
